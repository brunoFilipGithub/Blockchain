@using Blockchain.Models;
@model UserLoginModel

    <div class="logreg-container">
        <h1>Prijava korisnika: </h1>
        <br />
        @using (Html.BeginForm("UserLogin", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="userLoginKey">Jedinstveni ključ: </label>
                <input name="userLoginKey" type="text" class="form-control" placeholder="Unesite svoj jedinstveni ključ ovdje" value="" />
            </div>
            <span style="color: red;" asp-validation-for="UserLoginKey"></span>
            <div class="form-group" style="width: 20%; margin: 0 auto;">
                <input type="submit" class="btn btn-success btnSubmit" value="Prijavi se" />
            </div>
        }

        <div class="form-group">
            <a href="#" data-toggle="modal" data-target="#exampleModal" class="ForgetPwd">Izgubili ste ključ?</a>
        </div>
    </div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="margin-top:10%;">
        <div class="modal-content">
                <div class="modal-header">
                    <button type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">
                            ×
                        </span>
                    </button>
                </div>
            <div class="modal-body">
                <p>U slučaju gubitka svog jedinstvenog ključa, obratite se nadležnim tijelima.</p>
            </div>
        </div>
    </div>
</div>